@model PatientAppointmentViewModel


<section class=" background ">
   

    <div class="container py-5 mt-5">
        <div class="card shadow-sm">
            <div class="card-header bg-primary  text-white fs-3 text-center">
                Patient Information
            </div>
            <div class="card-body">
                <div class="row">
                    <!-- Left Column -->
                    <div class="col-12 col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Name:</label>
                            <span>@Model.Patient.Name</span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Phone Number:</label>
                            <span>@Model.Patient.Phone</span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Address:</label>
                            <span>@Model.Patient.Address</span>
                        </div>
                    </div>

                    <!-- Right Column -->
                    <div class="col-12 col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Age:</label>
                            <span>@Model.Patient.Age</span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Email:</label>
                            <span>@Model.Patient.Email</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="container-fluid w-75 ">
    <a class="btn btn-danger  fs-4  mb-3" asp-action="Create" asp-route-PatientId="@Model.Patient.Id">Create New Appointment</a>
        </div>
    </div>
   

@if (Model.Appointments.Any())
{
    <div class="container-fluid w-75">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th colspan="3" class="text-center">Appointment Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var appointment in Model.Appointments)
                    {
                        <tr>
                            <td>@appointment.Date.ToShortDateString()</td>
                            <td colspan="3">
                                <div class="group-box">
                                    <a class="btn btn-primary" asp-controller="Appointment" asp-action="Details" asp-route-id="@appointment.Id">
                                        <i class="fas fa-eye mx-1"></i>View
                                    </a>
                                    <a class="btn btn-warning" asp-controller="Appointment" asp-action="Edit" asp-route-id="@appointment.Id">
                                        <i class="fas fa-edit mx-1"></i>Update
                                    </a>
                                    <a class="btn btn-danger" asp-controller="Appointment" asp-action="Delete" asp-route-id="@appointment.Id">
                                        <i class="fas fa-trash mx-1"></i>Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="container mt-3 alert alert-warning">
        <h3>No Appointments Found</h3>
    </div>
}
   
</section>