@model GP.PL.VIewModel.PatientAppointmentViewModel

@{
    ViewData["Title"] = "Appointments";
}

<section class="vh-100 background">
    <div class="container py-5 mt-5">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white fs-3 text-center">
                Patient Information
            </div>
            <div class="card-body">
                <div class="row">
                    <!-- Left Column -->
                    <div class="col-12 col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Name:</label>
                            <span>@Model.Patient.Name</span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Phone Number:</label>
                            <span>@Model.Patient.Phone</span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Address:</label>
                            <span>@Model.Patient.Address</span>
                        </div>
                    </div>
                    <!-- Right Column -->
                    <div class="col-12 col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Age:</label>
                            <span>@Model.Patient.Age</span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Email:</label>
                            <span>@Model.Patient.Email</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid w-75">
        <button type="button" class="btn btn-danger fs-4 mb-3" data-bs-toggle="modal" data-bs-target="#createModal">Create New Appointment</button>
    </div>

    @if (Model.Appointments.Any())
    {
        <div class="container-fluid w-75">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th colspan="3" class="text-center">Appointment Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var appointment in Model.Appointments)
                        {
                            <tr>
                                <td>@appointment.Date.ToShortDateString()</td>
                                <td colspan="3">
                                    <div class="group-box">
                                        <a href="@Url.Action("Details", "Appointment", new { id = appointment.Id })" class="btn btn-primary">
                                            <i class="fas fa-eye mx-1"></i>3D Details
                                        </a>
                                        @if (appointment.Analysis != null)
                                        {
                                            <a href="@Url.Action("Details", "Analysis", new { id = appointment.Analysis.Id })" class="btn btn-warning">
                                                <i class="fas fa-eye mx-1"></i>2D Details
                                            </a>
                                        }
                                        <button class="btn btn-danger delete-btn" data-id="@appointment.Id">
                                            <i class="fas fa-trash mx-1"></i>Delete
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="container mt-3 alert alert-warning">
            <h3>No Appointments Found</h3>
        </div>
    }

    <!-- Create Modal -->
    <div class="modal fade" id="createModal" tabindex="-1" aria-labelledby="CreateModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="createModalLabel">Create Appointment</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="createForm" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="photo" class="form-label">Upload Image (.jpg or .jpeg)</label>
                            <input type="file" class="form-control" id="photo" name="photo" accept=".jpg,.jpeg" required>
                        </div>
                        <input type="hidden" name="patientId" value="@Model.Patient.Id" />
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-primary">Create</button>
                    </form>
                    <div id="loading" style="display:none;" class="mt-3">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        Processing...
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Handle create form submission
            $('#createForm').on('submit', function (e) {
                e.preventDefault();
                var formData = new FormData(this);
                for (let pair of formData.entries()) {
                    console.log(pair[0] + ': ' + pair[1]);
                }
                $('#loading').show();

                $.ajax({
                    url: '@Url.Action("Create", "Appointment")',
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    xhrFields: { withCredentials: true },
                    success: function (data) {
                        $('#loading').hide();
                        if (data.success) {
                            $('#createModal').modal('hide');
                            location.reload();
                        } else {
                            alert(data.message);
                        }
                    },
                    error: function (xhr, status, error) {
                        $('#loading').hide();
                        console.log('AJAX Error:', xhr.status, status, error, xhr.responseText);
                        alert('An error occurred: ' + xhr.status + ' ' + error);
                    }
                });
            });

            // Handle delete button click
            $('.delete-btn').on('click', function () {
                var id = $(this).data('id');
                if (confirm('Are you sure you want to delete this appointment?')) {
                    $.ajax({
                        url: '@Url.Action("Delete", "Appointment")',
                        type: 'POST',
                        data: { id: id },
                        success: function (data) {
                            if (data.success) {
                                location.reload();
                            } else {
                                alert(data.message);
                            }
                        },
                        error: function (xhr, status, error) {
                            console.log('Delete Error:', xhr.status, status, error);
                            alert('An error occurred: ' + xhr.status + ' ' + error);
                        }
                    });
                }
            });
        });
    </script>
}